<!-- Be very careful ediitng the OzStrips configuration.
     Do not make changes to this file, place an overwrite file in (PROFILE)/Plugins/AerodromeSettings.xml
     Changes between the two files are not additive. Changes in the Profile directory will overwrite this one.-->
<AerodromeSettings>
    <DefaultAerodromes>
		<Aerodrome>YMML</Aerodrome>
		<Aerodrome>YBBN</Aerodrome>
		<Aerodrome>YBCG</Aerodrome>
		<Aerodrome>YBSU</Aerodrome>
		<Aerodrome>YPPH</Aerodrome>
		<Aerodrome>YSSY</Aerodrome>
		<Aerodrome>YPAD</Aerodrome>
		<Aerodrome>YPDN</Aerodrome>
	</DefaultAerodromes>
  <LayoutDefinitions>
    <!-- DEFAULT / RADAR TOWERS -->
    <LayoutDefinition Name="All">
      <Element Name="Preactive" Column="0"/>
      <Element Name="Cleared" Column="0"/>
      <Element Name="Pushback" Column="1"/>
      <Element Name="Taxi" Column="1"/>
      <Element Name="Holding Point" Column="1"/>
      <Element Name="Runway" Column="2"/>
      <Element Name="Departed" Column="2"/>
      <Element Name="Arrivals" Column="2"/>
    </LayoutDefinition>
    <LayoutDefinition Name="ACD">
      <Element Name="Preactive" Column="0"/>
      <Element Name="Cleared" Column="1"/>
      <Element Name="Pushback" Column="2"/>
    </LayoutDefinition>
    <LayoutDefinition Name="ACD+SMC">
      <Element Name="Preactive" Column="0"/>
      <Element Name="Cleared" Column="0"/>
      <Element Name="Pushback" Column="0"/>
      <Element Name="Taxi" Column="1"/>
      <Element Name="Holding Point" Column="2"/>
      <Element Name="Runway" Column="2"/>
    </LayoutDefinition>
    <LayoutDefinition Name="SMC">
      <Element Name="Cleared" Column="0"/>
      <Element Name="Pushback" Column="0"/>
      <Element Name="Taxi" Column="1"/>
      <Element Name="Holding Point" Column="2"/>
      <Element Name="Runway" Column="2"/>
    </LayoutDefinition>
    <LayoutDefinition Name="SMC+ADC">
      <Element Name="Cleared" Column="0"/>
      <Element Name="Pushback" Column="0"/>
      <Element Name="Taxi" Column="1"/>
      <Element Name="Holding Point" Column="1"/>
      <Element Name="Runway" Column="2"/>
      <Element Name="Departed" Column="2"/>
      <Element Name="Arrivals" Column="2"/>
    </LayoutDefinition>
    <LayoutDefinition Name="ADC">
      <Element Name="Holding Point" Column="0"/>
      <Element Name="Runway" Column="1"/>
      <Element Name="Departed" Column="2"/>
      <Element Name="Arrivals" Column="2"/>
    </LayoutDefinition>
  </LayoutDefinitions>
  <BayTypes>
    <!-- RADAR TOWER / DEFAULT -->
    <BayType>
      <Bay Name="Preactive">
        <Type>BAY_PREA</Type>
      </Bay>
      <Bay Name="Cleared">
        <Type>BAY_CLEARED</Type>
      </Bay>
      <Bay Name="Pushback">
        <Type>BAY_PUSHED</Type>
      </Bay>
      <Bay Name="Taxi">
        <Type>BAY_TAXI</Type>
      </Bay>
      <Bay Name="Holding Point">
        <Type>BAY_HOLDSHORT</Type>
      </Bay>
      <Bay Name="Runway">
        <Type>BAY_RUNWAY</Type>
      </Bay>
      <Bay Name="Departed">
        <Type>BAY_OUT</Type>
      </Bay>
      <Bay Name="Arrivals">
        <Type>BAY_ARRIVAL</Type>
      </Bay>
    </BayType>
  </BayTypes>
  <AerodromeLists>
    <AerodromeList Type="MetroD">
      <Aerodrome>YMMB</Aerodrome>
    </AerodromeList>
  </AerodromeLists>
</AerodromeSettings>
